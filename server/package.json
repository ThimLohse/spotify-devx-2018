    "postman-request": "^2.88.1-postman.1",
    "spotify-web-api-node": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.4"
  }
}
